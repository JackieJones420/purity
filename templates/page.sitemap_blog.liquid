<!-- /templates/page.liquid -->
<div class="grid">
  <div class="grid__item large--one-whole">
    <h1 class="m-t-md text-center">{{ page.title }}</h1>
    {% comment %}
      Blog articles
    {% endcomment %}
    <div class="rte">
      {{ page.content }}
      {% include 'sitemap_blogs' %}
      {% for blog in s_blogs %}
      	  {% if blogs[blog].articles_count > 0 %}
          <a href="{{ blogs[blog].url }}"><h3>{{blogs[blog].title}}</h3></a>
	      {% for article in blogs[blog].articles %}
      		{% if article.published_at %}
    	  	<p><a href="{{article.url}}" title="{{article.title}}">{{article.title}}</a></p>
      		{% endif %}
		  {% endfor %}
          {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
